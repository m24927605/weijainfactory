<!DOCTYPE html>
<html lang="en">
<head>
<%include ./master/master_head.ejs %>
</head><!--/head-->
<body>
<%include ./master/menu.ejs %>
    <section id="contact-page" class="container">
        <div class="row">
            <div class="col-sm-12"><h1>聯絡我們</h1></div>
        </div>
        <form method="POST" action="/contact">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <input name="Name" type="text" class="form-control" required="required" placeholder="姓名">
                    </div>
                    <div class="form-group">
                        <input name="Phone" type="text" class="form-control" required="required" placeholder="市話">
                    </div>
                    <div class="form-group">
                        <input name="CellPhone" type="text" class="form-control" required="required" placeholder="手機">
                    </div>
                    <div class="form-group">
                        <input name="Email" type="email" class="form-control" required="required" placeholder="信箱">
                    </div>
                    <div class="form-group">
                        <input name="CompanyName" type="text" class="form-control" required="required" placeholder="公司名稱">
                    </div>
                </div>
                <div class="col-sm-4"></div>
                <div class="col-sm-4"></div>
           </div>
            <div class="row">
                <div class="col-sm-12">
                    <h4>諮詢內容</h4>
                    <div class="status alert alert-success" style="display: none"></div>
                        <div class="row">
                            <div class="col-sm-12">
                                <textarea name="Message" id="message" required="required" class="form-control" rows="8" placeholder="(請提供)" value=""></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-lg" value="送出">
                        </div>
                </div><!--/.col-sm-8-->
            </div>
        </form>
    </section><!--/#contact-page-->

<%include ./master/footer.ejs %>
<%include ./master/bodyend.ejs %>
</body>
</html>